@model BeestjeOpJeFeestje.Domain.Booking

@{
    ViewData["Title"] = "Delete";
}

<h1>Verwijderen</h1>

<h3>Weet je het zeker dat je dit wilt verwijderen?</h3>
<div>
    <h4>Booking</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            datum
        </dt>
        <dd class = "col-sm-10">
            @Model.Date.ToString("dd/MM/yyyy")
        </dd>
        <dt class = "col-sm-2">
            totalen prijs
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.TotalPrice)
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Delete" class="btn btn-danger" /> |
        <a asp-action="Index">Back to List</a>
    </form>
</div>
