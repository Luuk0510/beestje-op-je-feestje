@model BeestjeOpJeFeestje.ASP.Models.IndexViewModel;

@{
    ViewData["Title"] = "Boeking pagina";
}

@if (TempData["BookingSucces"] != null)
{
    <div class="container w-50 mx-auto">
        <div class="alert alert-success alert-dismissible fade show fs-5 text-center shadow" role="alert">
            @TempData["BookingSucces"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    </div>
}


<div class="bg-light p-3 mb-4">
    <h1>Boek een beestje</h1>
    <p>Welkom bij 'Beestje op een feestje' (BOEF) hier kun je een of meerdere van onze dieren boeken voor op jouw feestje! Kies de dag van je feestje en volg de stappen om je beestje te boeken.</p>
</div>


<div class="container">
    <div class="row">
        <div class="col-md-4">
            <form method="post">
                <div class="form-group">
                    <label class="form-label">Kies een dag na vandaag</label>
                    <input class="form-control mb-3" type="date" asp-for="BookingDate"/>
                    <span asp-validation-for="BookingDate" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <input class="btn btn-primary" type="submit" value="Boeken" />
                </div>
            </form>
        </div>

        <div class="col-md-8 d-flex align-items-start">
            <img src="~/img/farm.png" class="img-fluid" alt="boerderij" />
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}